<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>SG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <style>
    .nav-link.active {
  background-color: #6c757d !important;
  color: white !important; 
}

.sidebar {
  width: 280px;
  height: 100vh;
  background-color: #343a40; 
  color: white;
}

td, th {
    height: 50px;
    overflow: hidden; 
    text-align: center; 
  }

  </style>
  <body class="d-flex">
<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;height: 100vh;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
      <span class="fs-4">Gestão</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/" class="nav-link text-white">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
          Home
        </a>
      </li>
      <li>
        <a href="/task" class="nav-link active" aria-current="page">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
          Tarefas
        </a>
      </li>
      <br>
      <li>
        <div class="input-group mb-3">
          <form action="/task/search" class="d-flex" method="get">
            <input type="text" name="task" id="" placeholder="Buscar" class="form-control rounded-start" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <input  class="input-group-text btn btn-outline-light" type="submit">
           </form>
        </div>
      </li>
      <hr>
      <li>
        <h4>Legenda</h4>
      </li>
      <li>
        Concluído
        <br>
        <div class="spinner-grow text-success" role="status" style="animation-duration: 2s;">
        <span class="visually-hidden">Loading...</span>
      </li>
      <li>
        Em Andamento
        <br>
        <div class="spinner-border text-primary" role="status" >
        <span class="visually-hidden">Loading...</span>
      </li>
      <li>
       Não Iniciado
        <br>
        <div class="spinner-grow text-danger" role="status" style="animation-duration: 2s;">
        <span class="visually-hidden">Loading...</span>
      </li>
    </ul>
   
    <hr>
   
  </div>
 
<div class="ms-5 mt-2" style="width: 1000px;">
 <strong><h2 class="h1" style="font-weight: bolder;">Tarefas |<%= totalTasks %>| </h2></strong>
 <hr> 
 <table class="table table-striped table-bordered" >
    <thead>
      <tr >
        <th scope="col">Protocolo</th>
        <th scope="col">Nome</th>
        <th scope="col">Título da tarefa</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      
      <% tasks.forEach(task => { %>
        <% if (task.status === 2) { %>
      <tr style="height: 50px !important;">
        <th scope="row"><%= task.id %></th>
        <td><a  href="/task/task/<%= task.id %>"><%= task.usuario.nome %></a></td>
        <td><%= task.nome %></td>
        <td>
          <div class="spinner-border text-primary" role="status" >
          <span class="visually-hidden">Loading...</span>
        </div>
      </td>
      </tr>
     <% } else if (task.status === 3) { %>

      <tr >
        <th scope="row"><%= task.id %></th>
        <td><a  href="/task/task/<%= task.id %>"><%= task.usuario.nome %></a></a></td>
        <td><%= task.nome %></td>
        <td>
          <div class="spinner-grow text-success" role="status" style="animation-duration: 2s;">
          <span class="visually-hidden">Loading...</span>
        </div>
      </td>
      </tr>
      <% } else if (task.status === 1) { %>
      <tr >
        <th scope="row"><%= task.id %></th>
        <td><a  href="/task/task/<%= task.id %>"><%= task.usuario.nome %></a></a></td>
        <td><%= task.nome %></td>
        <td>
          <div class="spinner-grow text-danger" role="status" style="animation-duration: 2s;">
          <span class="visually-hidden">Loading...</span>
        </div>
      </td>
      </tr>
      <% } %>
      <% }); %>

    </tbody>
  </table>
</div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>